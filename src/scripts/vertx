#!/bin/sh

# This script lives on the vert.x bin directory which should be on the users PATH

PRG="$0"
while [ -h "$PRG" ] ; do
  ls=`ls -ld "$PRG"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "$PRG"`/"$link"
  fi
done

DIRNAME=`dirname "$PRG"`

CLASSPATH=$DIRNAME/../lib/java/vert.x.jar:$DIRNAME/../lib/java/netty.jar:$DIRNAME/../lib/java/high-scale-lib.jar:\
:$DIRNAME/../lib/java/hazelcast-all-1.9.4.4.jar:$DIRNAME/../conf:$DIRNAME/../lib/java/js.jar:$DIRNAME/../lib/java/groovy-all-1.8.3.jar:\
$DIRNAME/../lib/ruby:$JRUBY_HOME/lib/jruby.jar

java -Djava.util.logging.config.file=$DIRNAME/../conf/logging.properties -Djruby.home=$JRUBY_HOME\
 -cp $CLASSPATH org.vertx.java.core.app.cli.VertxMgr "$@"
